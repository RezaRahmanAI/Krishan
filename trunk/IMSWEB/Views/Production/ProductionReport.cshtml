@using IMSWEB.Model
@model ProductionViewModel

@{
    ViewBag.Title = "Production Report";
}

<h4>@(ViewBag.Title + ".")</h4>
<hr />
@using (Ajax.BeginForm("ProductionReport", "Report", new { ReturnUrl = ViewBag.ReturnUrl }, ajaxOptions: new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "report", LoadingElementId = "spinningIcon" }, htmlAttributes: new { role = "form" }))
{
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        <div class="form-group">
                            <div class=" col-md-2">
                                @Html.LabelFor(m => m.Detail.ProductID, new { @class = "control-label" })
                            </div>                         
                            <div class="col-md-3">
                                @{Html.RenderAction("RenderPicker", "Picker", new { pickerType = PickerType.ProductionProducts, id = (Model != null && Model.ProductionID != null) ? Model.ProductionID : 0 });
                                }
                                @Html.ValidationMessageFor(m => m.Detail.ProductID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">

                    </div>
                    <div class="row">
                        <div class="form-group">

                            <div class="col-md-2">
                                @Html.Label("From Date :", htmlAttributes: new { @class = "control-label" })
                            </div>
                            <div class='col-md-3 input-group date' id='FromDate'>
                                <input type='text' class="input-sm form-control input-sm" name='FromDate' />
                                <span class="input-group-addon">
                                    <i class="fa fa-calendar" aria-hidden="true"></i>
                                </span>

                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <div class="col-md-2">
                                @Html.Label("To Date :", htmlAttributes: new { @class = "control-label" })
                            </div>
                            <div class='col-md-3 input-group date' id='ToDate'>
                                <input type='text' class="input-sm form-control input-sm" name='ToDate' />
                                <span class="input-group-addon">
                                    <i class="fa fa-calendar" aria-hidden="true"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <div class="col-sm-4">
                                <img id="spinningIcon" height="45" width="45" style="display: none;" class="pull-right" src="~/Content/images/Spinner.gif" />
                            </div>
                            <div class="col-sm-4">
                                <input id="btnPreview" type="submit" value="Preview" class="btn btn-sm btn-info" />
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

}

<script>
