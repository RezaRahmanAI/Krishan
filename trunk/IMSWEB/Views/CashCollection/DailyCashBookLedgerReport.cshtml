@using IMSWEB.Model
@model IMSWEB.CreateBankTransactionViewModel


@{
    ViewBag.Title = "Cash In Hand Report";
}

<h4>@(ViewBag.Title + ".")</h4>
<hr />
<div class="row">
    <div class="col-lg-4 col-md-4 col-sm-12 col-lg-offset-4 col-md-offset-4" >
        <div class="panel panel-default">
            <div class="panel-body">
                @using (Ajax.BeginForm("DailyCashBookLedgerReport", "Report", new { ReturnUrl = ViewBag.ReturnUrl }, ajaxOptions: new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "report", LoadingElementId = "spinningIcon" }, htmlAttributes: new { role = "form" }))
                {

                
                    
                     
                <div class="panel-body">

                    <table class="table text-nowrap">
                        <tr>
                            <td>
                                <input id="ReportType" type="radio" title="Day" value="1" name="ReportType" checked />
                                @Html.Label("Day", htmlAttributes: new { @class = "control-label" })
                            </td>
                            <td>
                                <div class='col-sm-12 input-group date' id='FromDate'>
                                    <input type='text' class="input-sm form-control" name='FromDate' />
                                    <span class="input-group-addon">
                                        <i class="fa fa-calendar" aria-hidden="true"></i>
                                    </span>

                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <input id="ReportType" type="radio" title="Month" value="2" name="ReportType" />
                                @Html.Label("Month", htmlAttributes: new { @class = "control-label" })
                            </td>
                            <td>
                                <div class='col-sm-12 input-group date' id='Month'>
                                    <input type='text' class="input-sm form-control" name='Month' />
                                    <span class="input-group-addon">
                                        <i class="fa fa-calendar" aria-hidden="true"></i>
                                    </span>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <input id="ReportType" type="radio" title="Year" value="3" name="ReportType" />
                                @Html.Label("Year", htmlAttributes: new { @class = "control-label" })
                            </td>
                            <td>
                                <div class='col-sm-12 input-group date' id='Year'>
                                    <input type='text' class="input-sm form-control" name='Year' />
                                    <span class="input-group-addon">
                                        <i class="fa fa-calendar" aria-hidden="true"></i>
                                    </span>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <img id="spinningIcon" height="45" width="45" style="display: none;" class="pull-right" src="~/Content/images/Spinner.gif" />
                            </td>
                            <td>
                                <input id="btnPreview" type="submit" value="Preview" class="btn btn-sm btn-info" />
                            </td>
                        </tr>
                    </table>
                    @*<div class="form-group">
                            <div class='col-sm-10 input-group col-sm-offset-2' id='rbCustomerType'>
                                <input id="rdoAll" type="radio" title="All" value="0" name="CustomerType" checked />All Customer &nbsp;&nbsp;
                                <input id="rdoRetail" title="Retail" type="radio" value="1" name="CustomerType" />Retail &nbsp;&nbsp;
                                <input id="rdoDealer" title="Dealer" type="radio" value="2" name="CustomerType" />Dealer &nbsp;&nbsp;
                                <input id="rdoCredit" title="Credit" type="radio" value="3" name="CustomerType" />Credit
                            </div>
                        </div>*@
                </div>
          
                    
                    
                    
                    
                    
                }
            </div>
        </div>
    </div>
</div>

<script>
    //$('#FromDate').datetimepicker({
    //    defaultDate: moment(),
    //    format: 'DD-MMM-YYYY'
    //});

    //$('#ToDate').datetimepicker({
    //    defaultDate: moment(),
    //    format: 'DD-MMM-YYYY'
    //});


    $(document).ready(function () {

        $('#Month').datetimepicker({
            defaultDate: moment(),
            format: 'MMM-YYYY',
            viewMode: 'months',
            toolbarPlacement: "top",
            allowInputToggle: true,
        });

        $('#FromDate').datetimepicker({
            defaultDate: moment(),
            format: 'DD-MMM-YYYY',
        });


        $('#Year').datetimepicker({
            defaultDate: moment(),
            format: 'YYYY',
            viewMode: "years",
        });
    });
</script>
