@using IMSWEB.Model
@{
    ViewBag.Title = "Profit and Loss Account";
}

<h4 class="inline-header">@(ViewBag.Title + ".")</h4>
@using (Ajax.BeginForm("ProfitLossAccount", "Report", new { ReturnUrl = ViewBag.ReturnUrl }, ajaxOptions: new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "report", LoadingElementId = "spinningIcon" }, htmlAttributes: new { role = "form" }))
{
    <input type="hidden" name="ClientDateTime" id="ClientDateTime" />
    <div class="col-sm-5 col-sm-offset-3">
        <div class="panel panel-default">
            <div class="panel-body">
                <table class="table">
                    @if (User.IsInRole(EnumUserRoles.superadmin.ToString()))
                    {
                        <tr>
                            <td>
                                @Html.Label("Concerns", htmlAttributes: new { @class = "control-label" })
                            </td>
                            <td>
                                @Html.DropDownList("ConcernID", ViewBag.Concerns as SelectList, "--Select Concern--", new { @Class = "form-control" })
                            </td>
                        </tr>
                    }
                    <tr>
                        <td>
                            @Html.Label("From Date", htmlAttributes: new { @class = "control-label" })
                        </td>
                        <td>
                            <div class='input-group date' id='FromDate'>
                                <input type='text' class="input-sm form-control input-sm" name='FromDate' />
                                <span class="input-group-addon">
                                    <i class="fa fa-calendar" aria-hidden="true"></i>
                                </span>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.Label("To Date", htmlAttributes: new { @class = "control-label" })
                        </td>
                        <td>
                            <div class='input-group date' id='ToDate'>
                                <input type='text' class="input-sm form-control input-sm" name='ToDate' />
                                <span class="input-group-addon">
                                    <i class="fa fa-calendar" aria-hidden="true"></i>
                                </span>
                            </div>
                            <input id="rdioIncome" title="Income" type="hidden" value="2" name="ReportType" />
                        </td>
                    </tr>
             
                    <tr>
                        <td></td>
                        <td>
                            <div class="col-sm-4">
                                <img id="spinningIcon" height="45" width="45" style="display: none;" class="pull-right" src="~/Content/images/Spinner.gif" />
                            </div>
                            <div class="col-sm-4">
                                <input id="btnPreview" type="submit" value="Preview" class="btn btn-sm btn-info" />
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
        </div>

    </div>
}

<script>

    $(document).ready(function () {
        $('#FromDate').datetimepicker({
            defaultDate: new moment().startOf('month'),
            format: 'DD-MMM-YYYY'
        });

        $('#ToDate').datetimepicker({
            defaultDate: new moment(),
            format: 'DD-MMM-YYYY'
        });
        $('[name="ConcernID"]').select2();
        $("#ClientDateTime").val(moment().format('DD MMM YYYY hh:mm:ss A'));


        $('form').submit(function () {
            $("#ClientDateTime").val(moment().format('DD MMM YYYY hh:mm:ss A'));
        });
    });


</script>
