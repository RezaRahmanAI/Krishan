
    @model IEnumerable<GetSaleOfferViewModel>

    @{
        ViewBag.Title = "Sale Offer";
    }
    <h4 class="text-left inline-header">Existing Offer</h4>
    @Html.ActionLink("Create new Offer", "Create", "SaleOffer", routeValues: null, htmlAttributes: new { @class = "btn btn-primary btn-sm pull-right" })
    <hr />
    <table id="supplierTable"
           data-toggle="table"
           data-search="true"
           data-show-refresh="true"
           data-show-toggle="true"
           data-show-columns="true"
           data-show-export="true"
           data-detail-view="true"
           data-pagination="true"
           data-id-field="name"
           data-page-list="[10, 25, 50, 100, ALL]"
           data-page-size="10"
           class="table table-responsive table-bordered table-striped" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>
                    Sl
                </th>
                <th data-field="OfferCode"
                    data-sortable="true">
                    @Html.DisplayNameFor(model => model.OfferCode)
                </th>
                <th data-field="ProductID"
                    data-sorter="sorter"
                    data-sortable="true">
                    @Html.DisplayNameFor(model => model.ProductName)
                </th>
                <th data-field="FromDate"
                    data-sortable="true">
                    @Html.DisplayNameFor(model => model.FromDate)
                </th>
                <th data-field="ToDate"
                    data-sortable="true">
                    @Html.DisplayNameFor(model => model.ToDate)
                </th>
                <th data-field="Description"
                    data-sortable="true">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th data-field="OfferValue"
                    data-sortable="true">
                    @Html.DisplayNameFor(model => model.OfferValue)
                </th>
                @*<th data-field="OfferType"
                    data-sortable="true">
                    @Html.DisplayNameFor(model => model.OfferType)
                </th>*@
                @*<th data-field="ThresholdValue"
                    data-sortable="true">
                    @Html.DisplayNameFor(model => model.ThresholdValue)
                </th>*@

                <th data-field="Status"
                    data-sortable="true">
                    @Html.DisplayNameFor(model => model.Status)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                int count = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @count
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OfferCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FromDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ToDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OfferValue)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.OfferType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ThresholdValue)
                        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { onclick = "if(!confirm('Do you want to delete this sale offer?')) return false;" })
                        </td>
                    </tr>
                    count++;
                }
            }
        </tbody>
    </table>
