@{
    string actionName = ViewContext.RouteData.Values["action"].ToString();
    string controllerName = ViewContext.RouteData.Values["Controller"].ToString();
    ViewBag.Title = "Finalize Month";
}

<h4>@(ViewBag.Title + ".")</h4>
<hr />
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
            <div class="panel-body">
                @using (Html.BeginForm("Finalize", controllerName, new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    <table class="table text-nowrap">
                        <tr>
                            <td>
                                @Html.Label("Salary Month", htmlAttributes: new { @class = "control-label" })
                            </td>
                            <td>
                                <div class='input-group date' id='SalaryMonth'>
                                    <input type='text' class="input-sm form-control input-sm" readonly name='SalaryMonth' />
                                    <span class="input-group-addon">
                                        <i class="fa fa-calendar" aria-hidden="true"></i>
                                    </span>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.Label("Month End Date", htmlAttributes: new { @class = "control-label" })
                            </td>
                            <td>
                                <div class='input-group date' id='MonthEndDate'>
                                    <input type='text' class="input-sm form-control input-sm" name='MonthEndDate' />
                                    <span class="input-group-addon">
                                        <i class="fa fa-calendar" aria-hidden="true"></i>
                                    </span>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td>
                                <div class="col-sm-4">
                                    <img id="spinningIcon" height="45" width="45" style="display: none;" class="pull-right" src="~/Content/images/Spinner.gif" />
                                </div>
                                <div class="col-sm-4">
                                    <input id="btnPreview" type="submit" value="Finalize" class="btn btn-sm btn-success" />
                                </div>
                            </td>
                        </tr>
                    </table>
                }
            </div>
        </div>
    </div>
</div>

<script>
    $('#SalaryMonth').datetimepicker({
        @{
                if(ViewBag.SalaryMonth!=null)
                {
                    @:defaultDate: '@(Convert.ToDateTime(ViewBag.SalaryMonth).ToString("MMM-yyyy"))',
                                                }
                else
                {
                    @:defaultDate: moment(),
                                                }
                   @:format: 'MMMM-YYYY'
                                        }
    });

    $('#MonthEndDate').datetimepicker({
        defaultDate: moment(),
        format: 'DD-MMM-YYYY'
