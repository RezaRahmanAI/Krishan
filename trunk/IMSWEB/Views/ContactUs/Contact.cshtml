@model IMSWEB.AboutUsViewModels

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <section class="py-5" style="background-color: #e9e9e9;">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 text-center">
                    <h1 class="fw-bold">Contact</h1>
                </div>
            </div>
        </div>
    </section>

