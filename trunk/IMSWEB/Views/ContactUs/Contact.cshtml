                            <input class="form-control me-2 scrh mb-3 py-3 fs-3" type="text" placeholder="Phone" aria-label="Phone">
                            <textarea class="form-control me-2 mb-3 fs-3" name="messege" placeholder="Messege" cols="30" rows="10"></textarea>
                            <button class="btn frm-btn btn-success w-100 fw-bold py-2 fs-3" type="submit">Send</button>
