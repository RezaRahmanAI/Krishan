@model IEnumerable< IMSWEB.GetBankTransactionViewModel>

    @{
        ViewBag.Title = "BankTransactions";
    }
    <h4 class="text-left inline-header">Existing BankTransactions.</h4>
    @Html.ActionLink("Create new BankTransaction", "Create", routeValues: null, htmlAttributes: new { @class = "btn btn-primary btn-sm pull-right" })
    <hr />
    <table id="productTable"
           data-toggle="table"
           data-search="true"
           data-show-refresh="true"
           data-show-toggle="true"
           data-show-columns="true"
           data-show-export="true"
           data-detail-view="true"
           data-pagination="true"
           data-id-field="productName"
           data-page-list="[10, 25, 50, 100, ALL]"
           data-page-size="10"
           class="table table-responsive table-bordered table-striped" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>
                    Sl
                </th>
                <th data-field="TranDate"
                    data-sortable="true">
                    @Html.DisplayNameFor(model => model.TranDate)
                </th>
                <th data-field="BankName"
                    data-sorter="sorter"
                    data-sortable="true">
                    @Html.DisplayNameFor(model => model.BankName)
                </th>
                <th data-field="TransactionNo"
                    data-sortable="true">
                    @Html.DisplayNameFor(model => model.TransactionNo)
                </th>
                <th data-field="TransactionType"
                    data-sortable="true">
                    @Html.DisplayNameFor(model => model.TransactionType)
                </th>
                <th data-field="Amount"
                    data-sortable="true">
                    @Html.DisplayNameFor(model => model.Amount)
                </th>

                <th data-field="Remarks"
                    data-sortable="true">
                    @Html.DisplayNameFor(model => model.Remarks)
                </th>
                
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                int count = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @count
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TranDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BankName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TransactionNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TransactionType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Remarks)
                        </td>                     
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.BankTranID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.BankTranID }, new { onclick = "if(!confirm('Do you want to delete this Bank Transaction?')) return false;" })
                        </td>
                    </tr>
                    count++;
                }
            }
        </tbody>
    </table>
