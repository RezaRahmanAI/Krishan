@using IMSWEB.Model
@model IMSWEB.CreateCustomerViewModel
@{
    ViewBag.Title = "SR Wise Customer Due";
}

<h4 class="inline-header">@(ViewBag.Title + ".")</h4>
<hr />
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
        <div class="panel panel-default">
            <div class="panel-body">
                @using (Ajax.BeginForm("MOWiseCustomerDue", "Report", new { ReturnUrl = ViewBag.ReturnUrl }, ajaxOptions: new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "report", LoadingElementId = "spinningIcon" }, htmlAttributes: new { role = "form" }))
                {
                    if (!User.IsInRole(EnumUserRoles.MobileUser.ToString()))
                    {
                        <div class="form-group">
                            <label class="control-label col-md-4">Employee Name</label>
                            <div class="col-sm-8">
                                @{Html.RenderAction("RenderPicker", "Picker", new { pickerType = PickerType.PickEmployee, id = (Model != null && Model.EmployeeId != null) ? Model.EmployeeId : "0" });}
                                @Html.ValidationMessageFor(model => model.EmployeeId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-4">
                            </div>
                            <div class='col-sm-8 input-group' id='allMO'>
                                <label>
                                    <input id="rdioDetail" class="" title="MO" type="radio" value="1" name="ReportType" /> All SR
                                </label>
                            </div>
                        </div>
                    }

                    <div class="form-group">
                        <div class="col-sm-4">
                            <img id="spinningIcon" height="45" width="45" style="display: none;" class="pull-right" src="~/Content/images/Spinner.gif" />
                        </div>
                        <div class="col-sm-4">
                            <input id="btnPreview" type="submit" value="Preview" class="btn btn-sm btn-primary" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>



<script>

    $('form').submit(function () {

        // Get the Login Name value and trim it
        var name = $.trim($('#EmployeesId').val());
        var chk = $('#rdioDetail').prop("checked");
        // Check if empty of not
        var IsMobileUser = "@User.IsInRole(EnumUserRoles.MobileUser.ToString())";
        if (name === '' && !chk && IsMobileUser != "True") {
            alert('No Employee Selected .');
            return false;
        }
    });
</script>
