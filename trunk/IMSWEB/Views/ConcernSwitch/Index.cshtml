@model IMSWEB.Model.TOs.ConcernSwitchTO
@{
    ViewBag.Title = "Concern Switch";
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}

<div class="row" style="margin-top:10%">
    <div class="col-md-offset-3 col-md-5">
        <div class="panel panel-default">
            <div class="panel-body">
                @using (Html.BeginForm("Index", "ConcernSwitch", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    <div class="col-md-8 col-md-offset-2">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.LabelFor(model => model.ConcernId, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.DropDownListFor(model => model.ConcernId, new SelectList(ViewBag.ConcernIds, "Id", "Name", Model.ConcernId), "--Select a Concern--", new { @class = "form-control input-sm ddl2" })
                                @Html.ValidationMessageFor(model => model.ConcernId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="col-md-10">
                        <div class="form-group">
                            <div class="col-md-offset-1 text-right">
                                <input type="submit" value="SELECT" class="btn btn-sm btn-primary" />
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $("#ConcernId").select2();

    });
     document.getElementById('logoutForm').submit()
</script>